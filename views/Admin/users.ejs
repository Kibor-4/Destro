<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Property Management</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <%- include('../shared/header', { user: user }) %>
  <%- include('../shared/sidebar') %>

  <div class="main-content">
    <h1>Property Management</h1>

    <!-- Add Property Button -->
    <a href="/admin/properties/add" class="btn">Add Property</a>

    <!-- Property Table -->
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Type</th>
          <th>Price</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% properties.forEach(property => { %>
          <tr>
            <td><%= property.id %></td>
            <td><%= property.title %></td>
            <td><%= property.type %></td>
            <td>$<%= property.price %></td>
            <td><%= property.status %></td>
            <td>
              <a href="/admin/properties/edit/<%= property.id %>" class="btn-edit">Edit</a>
              <a href="/admin/properties/delete/<%= property.id %>" class="btn-delete">Delete</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <%- include('../shared/footer') %>
</body>
</html>