<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Analytics</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <%- include('../shared/header', { user: user }) %>
  <%- include('../shared/sidebar') %>

  <div class="main-content">
    <h1>Analytics</h1>

    <!-- Sales Chart -->
    <div class="chart-container">
      <h2>Sales Chart</h2>
      <canvas id="salesChart"></canvas>
    </div>

    <!-- User Activity Chart -->
    <div class="chart-container">
      <h2>User Activity Chart</h2>
      <canvas id="userActivityChart"></canvas>
    </div>
  </div>

  <%- include('../shared/footer') %>

  <!-- Chart.js Script -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    // Sales Chart
    const salesChart = new Chart(document.getElementById('salesChart'), {
      type: 'line',
      data: {
        labels: <%= JSON.stringify(salesData.labels) %>,
        datasets: [{
          label: 'Sales',
          data: <%= JSON.stringify(salesData.data) %>,
          borderColor: 'rgba(75, 192, 192, 1)',
          fill: false,
        }]
      }
    });

    // User Activity Chart
    const userActivityChart = new Chart(document.getElementById('userActivityChart'), {
      type: 'bar',
      data: {
        labels: <%= JSON.stringify(activityData.labels) %>,
        datasets: [{
          label: 'User Activity',
          data: <%= JSON.stringify(activityData.data) %>,
          backgroundColor: 'rgba(153, 102, 255, 0.2)',
          borderColor: 'rgba(153, 102, 255, 1)',
        }]
      }
    });
  </script>
</body>
</html>