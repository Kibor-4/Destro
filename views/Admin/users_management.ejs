<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Management</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="dashboard">
    <div class="sidebar">
      <h2>Admin Dashboard</h2>
      <ul>
        <li><a href="/admin">Dashboard</a></li>
        <li><a href="/admin/properties">Properties</a></li>
        <li><a href="/admin/users" class="active">Users</a></li>
        <li><a href="/admin/transactions">Transactions</a></li>
        <li><a href="/admin/analytics">Analytics</a></li>
        <li><a href="/admin/settings">Settings</a></li>
      </ul>
    </div>

    <div class="main-content">
      <div class="header">
        <h1>User Management</h1>
        <div class="user-info">
          <span>Welcome, Admin</span>
          <button onclick="logout()">Logout</button>
        </div>
      </div>

      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (users && users.length > 0) { %>
            <% users.forEach(user => { %>
              <tr>
                <td><%= user.id %></td>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td><%= user.role %></td>
                <td>
                  <a href="/admin/users/edit/<%= user.id %>"><button>Edit</button></a>
                  <form action="/admin/users/delete/<%= user.id %>" method="post" style="display: inline;">
                    <button type="submit">Delete</button>
                  </form>
                </td>
              </tr>
            <% }); %>
          <% } else { %>
            <tr>
              <td colspan="5">No users found.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <script>
    function logout() {
      console.log("Logout clicked");
      window.location.href = '/logout';
    }
  </script>
</body>
</html>